{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "parser": "babel-eslint"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-inner-declarations": "warn",
        "indent": [
            "error",
            2
        ],
        "vue/script-indent": [
            "error",
            2
        ],
        "vue/html-indent": [
            "error",
            2,
            {
                "alignAttributesVertically": false,
                "baseIndent": 1
            }
        ],
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": {
                    "max": 1,
                    "allowFirstLine": true
                },
                "multiline": {
                    "max": 1,
                    "allowFirstLine": true
                }
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.vue"
            ],
            "rules": {
                "indent": "off"
            }
        }
    ]
}